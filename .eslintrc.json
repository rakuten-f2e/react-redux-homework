{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "airbnb",
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:jest/recommended",
        "plugin:jsx-a11y/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "eqeqeq":[
            "error",
            "always"
        ],
        "comma-spacing":[
            "error",
            {"before": false, "after": true}
        ],
        "comma-style":[
            "error",
            "last"
        ],
        "camelcase":[
            "error"
        ],
        "react/jsx-filename-extension": [
            1, { "extensions": [".js", ".jsx"] }
        ]
    }
}